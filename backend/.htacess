<IfModule mod_headers.c>
    # Permitir qualquer origem (apenas para desenvolvimento)
    Header always set Access-Control-Allow-Origin "*"

    # Permitir métodos HTTP
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"

    # Permitir cabeçalhos customizados
    Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"

    # Permitir credenciais se necessário
    Header always set Access-Control-Allow-Credentials "true"

    # Evitar cache em desenvolvimento
    Header always set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
</IfModule>

# Responder OPTIONS com 200 OK para qualquer endpoint
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]
